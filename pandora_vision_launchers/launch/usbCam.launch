<launch>
  <include file="$(find vision)/launch/general_params.launch" />	
	
  <arg name="camID" default="/dev/video0"/>
	
  <node name="camera_head" pkg="usb_cam" type="usb_cam_node" output="screen" >
    <param name="video_device" value="$(arg camID)" />
    <param name="image_width" value="640" />
    <param name="image_height" value="480" />
    <param name="pixel_format" value="yuyv" />
    <param name="camera_frame_id" value="head_camera" />
    <param name="io_method" value="mmap"/>
  </node>
  <node name="image_view" pkg="image_view" type="image_view" respawn="false" output="screen">
    <remap from="image" to="/camera_head/image_raw"/>
    <param name="autosize" value="true" />
  </node>
</launch>
